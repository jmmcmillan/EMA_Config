             xmlns:cal="http://www.caliburnproject.org"
             
             xmlns:model="clr-namespace:EMA_Configuration_Tool.Model"
             mc:Ignorable="d" Height="700" Width="900"
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.Resources>

